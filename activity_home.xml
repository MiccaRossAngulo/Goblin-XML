        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188"
        app:srcCompat="@drawable/line"
        tools:ignore="ImageContrastCheck" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="413dp"
        android:layout_height="511dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/bottomAppBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:layout_constraintVertical_bias="0.0">

        <!-- LinearLayout to hold the scrollable content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Your fixed-height CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="127dp"
                    android:layout_margin="30dp"
                    android:layout_marginEnd="1in"
                    android:contentDescription="@string/todo1"
                    android:elevation="3dp"
                    app:srcCompat="@drawable/green_rectangle"
                    tools:ignore="InOrMmUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_marginTop=".33in"
                    android:fontFamily="@font/poppins"
                    android:paddingEnd="1.2in"
                    android:text="@string/wallet_balance"
                    android:textAlignment="center"
                    android:textColor="@color/green1"
                    android:textSize="16sp"
                    tools:ignore="InOrMmUsage,RtlSymmetry,VisualLintOverlap" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop=".6in"
                    android:fontFamily="@font/poppins"
                    android:paddingEnd=".85in"
                    android:text="@string/pesos"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    tools:ignore="InOrMmUsage,RtlSymmetry,VisualLintOverlap" />

                <ImageView
                    android:id="@+id/eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1.3in"
                    android:layout_marginTop=".75in"
                    android:contentDescription="@string/todo1"
                    android:elevation="3dp"
                    app:srcCompat="@drawable/open_eye"
                    tools:ignore="InOrMmUsage" />

                <TextView
                    android:id="@+id/moneybalance"
                    android:layout_width="match_parent"
                    android:layout_height="442dp"
                    android:layout_marginTop=".7in"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="1.28in"
                    android:text="@string/money"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    tools:ignore="InOrMmUsage,RtlSymmetry,VisualLintOverlap" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="187dp"
                    android:layout_marginTop="1.5in"
                    android:contentDescription="@string/todo1"
                    android:elevation="3dp"
                    app:srcCompat="@drawable/news_1"
                    tools:ignore="InOrMmUsage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart=".2in"
                    android:layout_marginTop="1.2in"
                    android:fontFamily="@font/poppins"
                    android:paddingEnd="0in"
                    android:text="@string/get_start"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    tools:ignore="InOrMmUsage,RtlSymmetry,VisualLintOverlap" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginStart=".21in"
                    android:layout_marginTop="3.2in"
                    android:contentDescription="@string/todo1"
                    android:elevation="3dp"
                    app:srcCompat="@drawable/news_2"
                    tools:ignore="InOrMmUsage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart=".2in"
                    android:layout_marginTop="2.9in"
                    android:fontFamily="@font/poppins"
                    android:paddingEnd="0in"
                    android:text="@string/save"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    tools:ignore="InOrMmUsage,RtlSymmetry,VisualLintOverlap" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="1.45in"
                    android:layout_marginTop="3.2in"
                    android:contentDescription="@string/todo1"
                    android:elevation="3dp"
                    app:srcCompat="@drawable/news_3"
                    tools:ignore="InOrMmUsage" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="452dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@color/green2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="BottomAppBar,MissingConstraints,VisualLintBottomAppBar,VisualLintBounds">


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green2"
            app:itemIconTint="@color/white"
            app:itemTextColor="#FFFFFF"
            app:menu="@menu/bottom_nav_menu"
            tools:ignore="MissingConstraints,VisualLintBottomNav"
            tools:layout_editor_absoluteX="16dp">


        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </com.google.android.material.bottomappbar.BottomAppBar>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#03FFFFFF"
        android:contentDescription="@string/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4.5in"
        app:srcCompat="@drawable/menu_home"
        tools:ignore="InOrMmUsage,MissingConstraints,VisualLintBounds" />



</androidx.constraintlayout.widget.ConstraintLayout>

